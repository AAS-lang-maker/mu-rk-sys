<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 核心：namespace必须等于UserMapper接口的全限定类名（包名+接口名） -->
<mapper namespace="com.music.Mapper.MyRankMapper">

    <select id="selectMyRank" resultType="com.music.dto.MyRankWithSong">
        select a.rank_name,a.vote_count,b.song_id,b.ranking,b.rank_update_time from personal_rank as a
        left join rank_song as b on a.rank_id = b.rank_id where a.user_id=#{userId}
        order by a.publish_time asc ,b.ranking asc;
    </select>
    <!-- 定义结果映射，把联表查询的结果映射到VO对象 -->
    <resultMap id="MyRankWithSongsResultMap" type="com.music.dto.MyRankWithSong">
        <id property="rankId" column="rank_id"/>
        <result property="rankName" column="rank_name"/>
        <result property="voteCount" column="vote_count"/>
        <result property="updateTime" column="rank_update_time"/>
        <!-- 子查询映射：把同一个榜单下的歌曲映射到songList列表 -->
        <collection property="rankSongList" ofType="com.music.pojo.rankSong">
            <result property="songId" column="song_id"/>
            <result property="ranking" column="ranking"/>
            <result property="rankUpdateTime" column="rank_update_time"/>
        </collection>
    </resultMap>

</mapper>